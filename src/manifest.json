{
  "name": "Thotify",
  "version": "1.8.0",
  "omnibox": { "keyword" : "thot" },
  "description": "Thot extension",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html#/popup",
    "default_icon": {
      "16": "assets/images/thot_16.png",
      "32": "assets/images/thot_32.png",
      "48": "assets/images/thot_48.png",
      "128": "assets/images/thot_128.png"
    }
  },
  "icons": {
    "16": "assets/images/thot_16.png",
    "32": "assets/images/thot_32.png",
    "48": "assets/images/thot_48.png",
    "128": "assets/images/thot_128.png"
  },
  "permissions": [
    "contextMenus"
   ],
  "host_permissions": ["https://thot.ref.gnc/*"],
  "background": {
    "service_worker": "background.js"
  }
}
